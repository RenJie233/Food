<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <include layout="@layout/title_compare"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/compareLeftIv"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@mipmap/img_compare_add"
            android:layout_centerVertical="true"
            android:layout_marginLeft="50dp"/>
        <ImageView
            android:id="@+id/compareLeftClear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_delete_default"
            android:layout_marginLeft="130dp"
            android:layout_marginTop="10dp"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/compareLeftTv"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/compareLeftIv"
            android:layout_alignLeft="@id/compareLeftIv"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:maxLines="1"/>
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/ic_vs"
            android:layout_centerInParent="true"/>
        <ImageView
            android:id="@+id/compareRightIv"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@mipmap/img_compare_add"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="50dp"/>
        <ImageView
            android:id="@+id/compareRightClear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_delete_default"
            android:layout_alignParentRight="true"
            android:layout_marginRight="40dp"
            android:layout_marginTop="10dp"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/compareRightTv"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/compareRightIv"
            android:layout_alignLeft="@id/compareRightIv"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:maxLines="1"/>

    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="营养元素"
        android:gravity="center"/>

    <ListView
        android:id="@+id/compareLv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        android:background="@color/colorWhite">

    </ListView>


</LinearLayout>