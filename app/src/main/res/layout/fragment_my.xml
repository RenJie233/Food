<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:background="@mipmap/img_my_bg">
        <include layout="@layout/title_my" android:id="@+id/myTitle">50dp</include>

        <com.example.dllo.food.tools.CircleImageView
            android:id="@+id/myDefaultIcon"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_centerHorizontal="true"
            android:src="@mipmap/ic_analyse_default"
            android:layout_marginTop="50dp"
            app:isCircle="true"/>
        <Button
            android:id="@+id/loginBtn"
            android:layout_width="65dp"
            android:layout_height="20dp"
            android:text="点击登录"
            android:textColor="#fff"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/my_button_style"
            android:layout_marginTop="140dp"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:id="@+id/myName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="ceshi"
            android:layout_marginTop="120dp"
            android:textColor="@color/colorWhite"
            android:visibility="gone"
            android:textSize="20sp"/>
        <Button
            android:id="@+id/myResetBtn"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:background="@drawable/my_button_style"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="160dp"
            android:text="修改个人资料"
            android:textColor="@color/colorWhite"
            android:visibility="gone"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="3"
        android:background="#fff">
        <RelativeLayout
            android:id="@+id/myPhotoRl"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <ImageView
                android:id="@+id/myPhoto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_margin="15dp"
                android:src="@mipmap/ic_my_photo"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我的照片"
                android:layout_toRightOf="@+id/myPhoto"
                android:layout_centerVertical="true"
                android:layout_margin="10dp"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_margin="15dp"
                android:src="@mipmap/ic_arrow_right_default"/>

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/myCollectRl"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <ImageView
                android:id="@+id/myCollect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_margin="15dp"
                android:src="@mipmap/ic_my_collect"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我的收藏"
                android:layout_toRightOf="@+id/myCollect"
                android:layout_centerVertical="true"
                android:layout_margin="10dp"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_margin="15dp"
                android:src="@mipmap/ic_arrow_right_default"/>

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/myUploadRl"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <ImageView
                android:id="@+id/myUpload"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_margin="15dp"
                android:src="@mipmap/ic_my_upload"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="上传食物数据"
                android:layout_toRightOf="@+id/myUpload"
                android:layout_centerVertical="true"
                android:layout_margin="10dp"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_margin="15dp"
                android:src="@mipmap/ic_arrow_right_default"/>

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/myOrderRl"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <ImageView
                android:id="@+id/myOrder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_margin="15dp"
                android:src="@mipmap/ic_my_order"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我的订单"
                android:layout_toRightOf="@+id/myOrder"
                android:layout_centerVertical="true"
                android:layout_margin="10dp"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_margin="15dp"
                android:src="@mipmap/ic_arrow_right_default"/>

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>